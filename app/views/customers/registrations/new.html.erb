
<div class="container">
    <h2 class="my-3">新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :neme,"名前" %><br>
        <%= f.text_field :name, class:"col-lg-4" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-lg-4" %>
      </div>

      <div class="field">
        <%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)" %><br>
        <%= f.text_field :telephone_number, :placeholder =>"00000111112", class:"col-lg-4" %>
      </div>

       <div class="field">
        <%= f.label :postal_code, "郵便番号（ハイフンなし７桁）" %><br>
        <%= f.text_field :postal_code, :placeholder =>"0001234", class:"col-lg-4" %>
      </div>

      <div class="field">
        <%= f.label :address, "住所" %><br>
        <%= f.text_field :address, class:"col-lg-6" %>
      </div>


      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"col-lg-4" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-lg-4" %>
      </div>

      <div class="actions my-3">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    <div class="my-3">
      <p>既に登録済みの方は</p>
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
    </div>