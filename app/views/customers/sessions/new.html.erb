<div class="container">
  <%= flash[:error] %>
    <h2 class="my-3">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email,"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-lg-4"  %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード"%><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"col-lg-4" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions my-3">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <div class="my-3">
      <p>新規登録の方は</p>
      <p><%= link_to "こちら", new_customer_registration_path %>から</p>
    </div>
    <!--<#%= render "customers/shared/links" %>-->
</div>